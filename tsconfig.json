{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "jsx": "react",
        "jsxFactory": "React.createElement",
        "jsxFragmentFactory": "React.Fragment",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./",
        "paths": {
            "@/*": ["./test/app/*"],
        },
        "declaration": true,
        "declarationMap": false
    },
    "include": ["src/**/*", "test/app/**/*"],
    "exclude": ["node_modules", "lib", "package.json"]
}